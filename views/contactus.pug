extends base.pug


block scripts
  script(src='../static/script.js')

block style 
    style 
        include ../static/style.css
        include ../static/styleContact.css

block content 
    div.container
      h1 Contact Us
      form(action="/contact", method="post",class="myForm")
        input(type="text",class="myInput",name="name",placeholder="Enter Your Name")
        input(type="phone",class="myInput",name="phone",placeholder="Enter Your Phone-no")
        input(type="Email",class="myInput",name="Email",placeholder="Enter Your Email-Id")
        input(type="text",class="myInput",name="Adress",placeholder="Enter Your Adress")
        input(type="text",class="myInput",name="desc",placeholder="Enter Your DESC")
        button(class="btn") 
          | Submit